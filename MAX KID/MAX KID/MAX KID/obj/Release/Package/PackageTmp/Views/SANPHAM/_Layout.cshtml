                </div>
                <div class="search_box">
                    @using (Html.BeginForm("TimKiem", "SANPHAM", FormMethod.Post))
                    {

                        @Html.TextBox("txttimkiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "nhập vào sản phẩm" })
                        <input type="submit" value="" />

                    }
                </div>
                <div class="clear"></div>
