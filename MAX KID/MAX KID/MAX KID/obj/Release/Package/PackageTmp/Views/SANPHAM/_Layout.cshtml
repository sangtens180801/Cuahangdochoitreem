                            {
                                Cart cart = (Cart)Session["CartSession"];
                                <span class="no_product">@cart.TotalItem() sản phẩm | @cart.ComputeTotalValue() VNĐ</span>
                             
                            }
                            else
                            {
                                <span class="no_product">0 sản phẩm | 0 VNĐ</span>
                            }
                        </div>
                    </p>
                </div>
                
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
