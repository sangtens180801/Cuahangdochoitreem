@model MAX_KID.Models.Entities.Account
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/SANPHAM/_LayoutSign.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "User")) 
    {
        @Html.ValidationSummary(false) @*đổi từ truse thành false*@
        <tr>
            <td>Họ tên:</td>
            <td>
                @Html.TextBox("HoTen")
            @Html.ValidationMessageFor(model => model.HoVaTen, "*", new { placeholder = " Nhập vào tên quản trị" })
        </td>
    </tr>
    <tr>
        <td>Tên đăng nhập:</td>
        <td>
            @Html.TextBox("TaiKhoan")
            @Html.ValidationMessageFor(model => model.TenTaiKhoan, "*", new { @class = "text-danger" })
        </td>

    </tr>
    <tr>
        <td>Mật khẩu:</td>
        <td>
            @Html.Password("MatKhau")
        @Html.ValidationMessageFor(model => model.Password, "*", new { @class = "text-danger" })
    </td>
</tr>
<tr>
    <td>Mật khẩu nhập lại:</td>
    <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
</tr>
<tr>
    
</tr>
<tr>
    <td>Điện thoại:</td>
    <td>
        @Html.TextBox("DienThoai")
    @Html.ValidationMessageFor(model => model.DienThoai, "*", new { @class = "text-danger" })
</td>
</tr>
<tr>
    
</tr>
<tr>
    <td>Địa chỉ:</td>
    <td><input type="text" name="DiaChi" /></td>
</tr>
<tr>
    <td></td>
    <td>
        <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
    </td>
</tr>
}
</table>